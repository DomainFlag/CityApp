<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.cchiv.cityapp.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/restaurants"
            android:background="@color/color_1"
            android:text="@string/app_header_1"
            style="@style/header_style" />

        <TextView
            android:id="@+id/parks"
            android:background="@color/color_3"
            android:text="@string/app_header_3"
            style="@style/header_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sightseeing"
            android:background="@color/color_2"
            android:text="@string/app_header_2"
            style="@style/header_style" />

        <TextView
            android:id="@+id/events"
            android:background="@color/color_4"
            android:text="@string/app_header_4"
            style="@style/header_style" />

    </LinearLayout>

</LinearLayout>
